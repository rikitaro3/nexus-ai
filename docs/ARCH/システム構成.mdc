```
tools/nexus/
├── src/                     # ソースコード
│   ├── main/               # Main Process
│   │   ├── main.ts        # エントリーポイント
│   │   ├── handlers/      # IPCハンドラー
│   │   │   ├── docs.ts    # docs:* ハンドラー
│   │   │   └── tasks.ts   # tasks:* ハンドラー
│   │   └── utils/         # ユーティリティ
│   │       ├── security.ts # セキュリティ検証
│   │       └── file.ts     # ファイル操作
│   ├── preload/           # Preload script
│   │   └── preload.ts    # Bridge API
│   └── renderer/          # Renderer Process
│       ├── index.html     # UI構造
│       ├── styles/        # スタイル
│       │   ├── app.css    # メインスタイル
│       │   └── theme.css # テーマ
│       ├── features/      # 機能別
│       │   ├── docs-navigator/
│       │   │   ├── docs-navigator.js
│       │   │   └── tree-view.js
│       │   └── tasks/
│       │       └── tasks.js
│       └── shared/        # 共通
│           ├── app.js     # アプリ初期化
│           └── utils.js   # ユーティリティ
├── dist/                   # ビルド成果物
│   ├── main/              # Main Process ビルド
│   └── renderer/          # Renderer Process ビルド
├── docs/                   # ドキュメント
│   ├── PRD/              # 要件定義
│   ├── ARCH/             # アーキテクチャ設計
│   ├── DEVELOPMENT/      # 開発ガイド
│   ├── QA/               # テスト
│   └── GATES/            # Quality Gates定義
├── test/                   # テスト
│   ├── e2e/              # E2Eテスト
│   │   └── test-e2e.js   # E2Eテストスクリプト
│   └── unit/             # ユニットテスト
